{
  "name": "Elements",
  "version": "1.1.6",
  "description": "A periodic table viewer desktop app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "build": {
    "appId": "de.florianfe.elements",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "icon@2x"
    },
    "win": {
      "icon": "build/icon"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "icon": "build/icons/",
      "desktop": {
        "Name": "Elements",
        "Comment": "An application which displays the periodic table",
        "Categories": "Science;Chemistry;"
      }
    }
  },
  "repository": "https://github.com/FlorianFe/Elements",
  "keywords": [
    "translation",
    "polymer",
    "electron"
  ],
  "author": {
    "name": "Florian Fechner",
    "email": "f_fech03@uni-muenster.de",
    "url": "https://github.com/FlorianFe"
  },
  "license": "CC-0",
  "devDependencies": {
    "electron": "^7.2.4",
    "electron-builder": "^21.2.0"
  },
  "dependencies": {
    "electron-localshortcut": "^3.1.0",
    "ipc": "0.0.1",
    "lodash.debounce": "^4.0.8",
    "path": "^0.12.7"
  }
}
